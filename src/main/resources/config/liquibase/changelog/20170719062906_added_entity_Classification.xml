<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Classification.
    -->
    <changeSet id="20170719062906-1" author="jhipster">
        <createTable tableName="classification">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="language" type="varchar(2)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
    </changeSet>

    <changeSet id="20170719062906-2" author="mabi" context="!test">
        <loadData encoding="UTF-8"
                  file="config/liquibase/changelog/data/REFERENCESERVICE_PUBLIC_CLASSIFICATION.csv"
                  tableName="classification">
        </loadData>
    </changeSet>

</databaseChangeLog>
