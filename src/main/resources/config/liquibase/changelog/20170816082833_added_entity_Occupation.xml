<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity OccupationMapping.
    -->
    <changeSet id="20170816082833-1" author="jhipster">
        <createTable tableName="occupation_mapping">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="x28_code" type="integer"/>

            <column name="avam_code" type="integer">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addUniqueConstraint constraintName="occupation_mapping_x28_code_unique"
                             tableName="occupation_mapping" columnNames="x28_code"/>

    </changeSet>

    <changeSet id="20170816082833-2" author="varu" context="!test">
        <loadData tableName="occupation_mapping"
                  file="config/liquibase/changelog/data/OCCUPATION_MAPPING.csv"/>
    </changeSet>

    <!--
        Added the entity Occupation
    -->
    <changeSet id="20170816082833-3" author="miwr">
        <createTable tableName="occupation">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="classification_code" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="label_de" type="varchar(100)"/>

            <column name="label_fr" type="varchar(100)"/>

            <column name="label_it" type="varchar(100)"/>

            <column name="label_en" type="varchar(100)"/>
        </createTable>

        <addUniqueConstraint constraintName="occupation_class_code_unique"
                             columnNames="code"
                             tableName="occupation"/>
    </changeSet>

    <changeSet id="20170816082833-4" author="varu">
        <loadData tableName="occupation"
                  file="config/liquibase/changelog/data/OCCUPATION.csv"/>
    </changeSet>

    <!--
        Added the entity OccupationSynonym
    -->
    <changeSet id="20170816082833-5" author="jhipster">
        <createTable tableName="occupation_synonym">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="language" type="varchar(2)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="external_id" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint constraintName="occ_syn_external_id_unique"
                             columnNames="external_id"
                             tableName="occupation_synonym"/>
    </changeSet>

    <changeSet id="20170816082833-6" author="miwr" context="!test">
        <loadData
            file="config/liquibase/changelog/data/OCCUPATION_SYNONYM.csv"
            tableName="occupation_synonym">
        </loadData>
    </changeSet>
</databaseChangeLog>
