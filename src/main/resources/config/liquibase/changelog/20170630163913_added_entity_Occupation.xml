<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Occupation.
    -->
    <changeSet id="20170630163913-1" author="jhipster">
        <createTable tableName="occupation">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="language" type="varchar(2)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="namesynonyms" type="varchar(50)">
                <constraints nullable="true"/>
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

        <createTable tableName="occupation_namesynonyms">
            <column name="occupation_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="namesynonyms" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="occupation_id, namesynonyms"
                       constraintName="pk_occupation_id_namesynonyms"
                       tableName="occupation_namesynonyms"/>

        <addForeignKeyConstraint baseColumnNames="occupation_id"
                                 baseTableName="occupation_namesynonyms"
                                 constraintName="fk_namesynonyms_occupation_id"
                                 referencedColumnNames="id"
                                 referencedTableName="occupation"/>

    </changeSet>
</databaseChangeLog>
