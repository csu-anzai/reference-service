<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity OccupationMapping.
    -->
    <changeSet id="20171122090000-1" author="miwr">
        <createTable tableName="occupation_label_mapping">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="avam_code" type="varchar(10)">
                <constraints unique="true"/>
            </column>

            <column name="bfs_code" type="varchar(10)">
                <constraints unique="false"/>
            </column>

            <column name="sbn3_code" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="sbn5_code" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="20171122090000-2" author="miwr" context="!test">
        <validCheckSum>ANY</validCheckSum>
        <loadData tableName="occupation_label_mapping"
                  file="config/liquibase/changelog/data/occupation-label-mapping.csv"/>
    </changeSet>

    <changeSet id="20171122090000-4" author="miwr">
        <createTable tableName="occupation_label">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(10)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="type" type="varchar(10)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="language" type="varchar(2)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="classifier" type="varchar(10)">
                <constraints unique="false"/>
            </column>
            <column name="label" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex catalogName="cat"
                     indexName="idx_occupation_label"
                     tableName="occupation_label"
                     unique="false">
            <column name="code" type="varchar(10)"/>
            <column name="type" type="varchar(10)"/>
            <column name="language" type="varchar(2)"/>
            <column name="classifier" type="varchar(10)"/>
        </createIndex>
    </changeSet>

    <changeSet id="20171122090000-5" author="miwr" context="!test">
        <validCheckSum>ANY</validCheckSum>
        <loadData tableName="occupation_label"
                  file="config/liquibase/changelog/data/occupation-label-avam.csv"/>
        <loadData tableName="occupation_label"
                  file="config/liquibase/changelog/data/occupation-label-sbn.csv"/>
        <loadData tableName="occupation_label"
                  file="config/liquibase/changelog/data/occupation-label-bfs.csv"/>
        <loadData tableName="occupation_label"
                  file="config/liquibase/changelog/data/occupation-label-x28.csv"/>
    </changeSet>

    <changeSet id="20171122090000-8" author="miwr">
        <createTable tableName="occupation_label_mapping_x28">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="x28_code" type="varchar(10)">
                <constraints unique="true"/>
            </column>

            <column name="avam_code" type="varchar(10)">
                <constraints unique="false"/>
            </column>

        </createTable>

        <loadData
                file="config/liquibase/changelog/data/occupation-label-mapping-x28.csv"
                tableName="occupation_label_mapping_x28">
        </loadData>
    </changeSet>

</databaseChangeLog>
