{
    "analysis": {
        "filter": {
            "german_stop": {
                "type": "stop",
                "stopwords": "_german_"
            },
            "french_stop": {
                "type": "stop",
                "stopwords": "_french_"
            },
            "italian_stop": {
                "type": "stop",
                "stopwords": "_italian_"
            },
            "french_stemmer": {
                "type": "stemmer",
                "language": "light_french"
            },
            "german_stemmer": {
                "type": "stemmer",
                "language": "light_german"
            },
            "italien_stemmer": {
                "type": "stemmer",
                "language": "light_italian"
            }
        },
        "analyzer": {
            "swiss_term": {
                "tokenizer": "standard",
                "filter": [
                    "lowercase",
                    "german_stemmer",
                    "french_stemmer",
                    "italien_stemmer"
                ]
            },
            "swiss": {
                "tokenizer": "standard",
                "filter": [
                    "lowercase",
                    "german_stop",
                    "french_stop",
                    "italian_stop",
                    "german_stemmer",
                    "french_stemmer",
                    "italien_stemmer"
                ]
            },
            "multi_language": {
                "tokenizer": "standard",
                "filter": [
                    "lowercase",
                    "asciifolding"
                ]
            }
        }
    }
}
